<%- include("../../partials/admin-header") -%>
<%- include("../../partials/admin-nav") -%>


        <div class="content-wrapper p-5">
         
          <div class="row">
            <div class="col-md-12 stretch-card">
              <div class="card">
                <div class="card-body">
                <div class="align-items-baseline d-flex justify-content-between">
                        <p class="card-title">Career</p>
                        <div>
                           <button  id="editForm" class="btn btn-primary">Edit</button>
                          <a href="/career/openings/new"   class="btn btn-primary">Add New</a>               
                        </div>

                  </div>

                <div class="careerHeadings py-5">
                      <form id="form" method="post" enctype="multipart/form-data">
                             <div class="form-group">
                                  <label for="title">Title</label>
                                  <input type="text" class="form-control" value="<%= career.title %>" name="title"  id="title" placeholder="title">
                              </div>
                              <div class="form-group">
                                  <label for="description">Description</label>
                                  <textarea class="form-control border"    name="description" id="description" rows="5" placeholder="description" maxlength="125"><%= career.description %></textarea>
                              </div>
                           <div>
                              <button type="submit" id="submit" class="btn btn-primary">Save</button>
                          </div>
                      </form>
                    </div>




<div id="careerForm"  class="py-5">
  
    <form id="openingEditForm"  method="post" enctype="multipart/form-data">
        <div class="form-group">
              <label for="title">Title</label>
                <input type="text" class="form-control"  name="title"  id="title" placeholder="title">
              </div>
              <div class="d-flex form-group row">
                <div class="col-lg-4 col-md-4">
                  <label for="img">Image</label>
                  <input type="file"   style="border: none !important;" class="form-control" name="img" id="benefitimg">
                </div>
                <div id="imgPreviewBox" class="col col-lg-8 text-center" style="height: 500px;width: auto;margin: auto;overflow: scroll;position: relative;">
                  <img src=''   id="imgPreview"   class="img-fluid"style="left: 50%;transform: translate(-50%, 0);position: absolute;">
                </div>
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control border"   name="description" id="description" rows="3" placeholder="description" maxlength="125"></textarea>
              </div>
        <div>
            <button type="submit" id="submit" class="btn btn-primary">Add</button>
        </div>
    </form>
</div>









               <div class="table-responsive">
                              <table id="recent-purchases-listing" class="table">
                                <thead>
                                  <tr>
                                      <th>Title</th>
                                      <th>Position</th>
                                      <th>Form</th>
                                      <th>Actions</th>
                                  </tr>
                                </thead>
                                <tbody>


                    <% if(career){ %>
                        <% career.openings.forEach((career)=> {  %>
                          <tr>
                              <td><h4><%= career.title %></h4></td> 
                              <td><h4><%= career.designation %></h4></td> 
                              <td><h4><%= career.form_link ?  career.form_link.substring(0,20)  : 'Default Form' %></h4></td> 
                              <td class="text-center">
                                <input type="text" value="<%= JSON.stringify(career) %>" class="d-none">
                                <button class="btn btn-danger px-3 py-2 deleteOpening">Delete</button>
                              </td>
                          </tr>   
                       <%  }) %>
                    <% } %> 

                         
                      </tbody>
                    </table>
                  </div>


                </div>
              </div>
            </div>
          </div>
        </div>



<script>
  $('.careerHeadings').hide();
  $('#careerForm').hide();



  $('#editForm').click(()=> {
      $("#editForm").attr('disabled' ,true)
     $('.careerHeadings').show(300);
  })



 $('.careerHeadings #form').submit((e)=>{
    e.preventDefault();
    var formdata = new FormData(document.getElementById('form'));
    $.ajax({
      type: 'PUT',
      url: '/career',
      data: formdata,
      processData : false,
      contentType: false,
      success: function(res) {
        if(res.status){
               Swal.fire(
          'Success',
          'Info updated',
          'success'
        ).then(()=> {
            $('#editForm').attr('disabled', false);
           
            $('.careerHeadings').hide(300);
        })
        }
      }
    })
  })


</script>




<script>
 
  $('.deleteOpening').click((e)=> {
   var opening =JSON.parse(e.target.previousElementSibling.value);


Swal.fire({
  title: 'Are you sure?',
  text: "You won't be able to revert this!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result)=> {
   if(result.isConfirmed){

      $.ajax({
        type: 'DELETE',
        url : '/career/openings',
        data : opening,
        success :  function(res){
          if(res.status){
             Swal.fire(
          'Success',
           res.msg,
          'success'
        ).then(()=> {

            e.target.parentElement.parentElement.remove();

        })
          
          }
        }
      })

   }
})



  })
</script>


