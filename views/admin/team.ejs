                                <img src=''   id="logoPreview"   class="img-fluid"style="left: 50%;transform: translate(-50%, 0);position: absolute;">
                              </div>
                            </div>


                              <div class="form-group w-75">
                                <label for="description">Social Links</label>
                                <div class="form-group">
                                  <label for="fb">Facebook</label>
                                  <input type="text" class="form-control"  name="fb" id="fb" placeholder="https://facebook.com">
                                </div>
                                <div class="form-group">
                                  <label for="instagram">Instagram</label>
                                  <input type="text" class="form-control" name="instagram" id="instagram" placeholder="https://instagram.com">
                                </div>
                                <div class="form-group">
                                  <label for="twitter">Twitte</label>
                                  <input type="text" class="form-control"   name="twitter" id="twitter" placeholder="https://twitter.com">
                                </div>
                                <div class="form-group">
                                  <label for="linkedin">LinkedIn</label>
                                  <input type="text" class="form-control"   name="linkedin" id="linkedin" placeholder="https://linkedin.com">
                                </div>
                              </div>
                           <div>
                              <button type="submit" id="submit" class="btn btn-primary">Save</button>
                          </div>
                      </form>
                    </div>

               <div class="table-responsive">
                              <table id="recent-purchases-listing" class="table">
                                <thead>
                                  <tr>
                                      <th>Image</th>
                                      <th>Name</th>
                                      <th>Position</th>
                                      <th>Actions</th>
                                  </tr>
                                </thead>
                                <tbody>

<% if(members){ %>
  <% members.forEach((member)=> { %>
    <tr>
          <td><img src="<%= member.img %>" alt=""></td>
          <td><h4><%= member.name %></h4></td> 
          <td><h4><%= member.position %></h4></td> 
          <td class="text-center">
              <input type="text" value="<%= JSON.stringify(member) %>" class="d-none">
              <button class="btn btn-primary px-3 py-2 editBtn">Edit</button>
              <button class="btn btn-danger px-3 py-2 deleteBtn">Delete</button>
          </td>
      </tr>   
  <% }) %>
<% } %>
                 
                          
                    
                         
                      </tbody>
                    </table>
                  </div>

                 </div>
              </div>
            </div>
          </div>
        </div>



