                              <td><img src="<%= about.img %>" alt=""></td>
                              <td><h4><%= about.title %></h4></td> 
                              <td class="text-center">
                                <input type="text" value="<%= JSON.stringify(about) %>" class="d-none">
                                <button class="btn btn-primary px-3 py-2 editBenefit">Edit</button>
