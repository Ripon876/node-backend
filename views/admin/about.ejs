                                  <label for="description">Short Description</label>
                                  <textarea class="form-control border"    name="short_description" id="short_description" rows="3" placeholder="description" maxlength="125"><%= about.short_description %></textarea>
                              </div>
                              <div class="form-group">
                                  <label for="description">Long Description</label>
                                  <textarea class="form-control border"    name="long_descrition" id="long_descrition" rows="10" placeholder="description" maxlength="450"><%= about.long_descrition %></textarea>
                              </div>
                              <div class="form-group">
                                <label for="keywords">Keywords</label>
                                 <input type="text" title="seperate  keywords with comma" class="form-control" value='<%= about.keywords %>'  name="keywords" id="keywords" placeholder="type keywords here">
                              </div>
                           <div>
                              <button type="submit" id="submit" class="btn btn-primary">Save</button>
                          </div>
                      </form>
                    </div>




<div id="newbenefitform"  class="py-5">
  
    <form id="newbenefiteditform"  method="post" enctype="multipart/form-data">
        <div class="form-group">
              <label for="title">Title</label>
                <input type="text" class="form-control"  name="title"  id="title" placeholder="title">
