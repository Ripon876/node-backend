<%- include("../../partials/admin-header") -%>
<%- include("../../partials/admin-nav") -%>


        <div class="content-wrapper p-5">
         
          <div class="row">
            <div class="col-md-12 stretch-card">
              <div class="card">
                <div class="card-body">
                <div class="align-items-baseline d-flex justify-content-between">
                        <p class="card-title">About</p>
                        <div>
                           <button  id="editForm" class="btn btn-primary">Edit</button>
                          <a href="/about/benefits/new"   class="btn btn-primary">Add New</a>               
                        </div>

                  </div>

                <div class="aboutHeadings py-5">
                      <form id="form" method="post" enctype="multipart/form-data">
                             <div class="form-group">
                                  <label for="title">Title</label>
                                  <input type="text" class="form-control" value="<%= about.title %>" name="title"  id="title" placeholder="title">
                              </div>
                            <div class="d-flex form-group row">
                              <div class="col-lg-4 col-md-4">
                                <label for="img">Logo</label>
                                <input type="file" style="border: none !important;" class="form-control" name="img" id="img">
                              </div>
                              <div id="imgPreviewBox" class="col col-lg-8 text-center" style="height: 500px;width: auto;margin: auto;overflow: scroll;position: relative;">
                                <img src='<%= about.img %>'   id="logoPreview"   class="img-fluid"style="left: 50%;transform: translate(-50%, 0);position: absolute;">
                              </div>
                            </div>
                              <div class="form-group">
                                  <label for="description">Description</label>
                                  <textarea class="form-control border"    name="short_description" id="short_description" rows="3" placeholder="description" maxlength="125"><%= about.short_description %></textarea>
                              </div>
                              <div class="form-group">
                                  <label for="description">Description</label>
                                  <textarea class="form-control border"    name="long_descrition" id="long_descrition" rows="10" placeholder="description" maxlength="300"><%= about.long_descrition %></textarea>
                              </div>
                           <div>
                              <button type="submit" id="submit" class="btn btn-primary">Save</button>
                          </div>
                      </form>
                    </div>



                </div>
              </div>
            </div>
          </div>
        </div>




<script type="text/javascript">


function readURL(input) {
  if (input.files && input.files[0]) {
  var reader = new FileReader();
  reader.onload = function(e) {
    function na(){
      let im = document.createElement("logoPreview");
      $('#logoPreview').attr("src", e.target.result)
      $('#imgPreviewBox').show(300);
    }
    na();
  }
  reader.readAsDataURL(input.files[0]); // convert to base64 string
  }
}

$("#img").change(function() {
readURL(this);
});

</script>

<script>
  $('.aboutHeadings').hide();
  $('#editForm').click(()=> {
      $("#editForm").attr('disabled' ,true)
     $('.aboutHeadings').show(300);
  })





 $('.aboutHeadings #form').submit((e)=>{
    e.preventDefault();
    var formdata = new FormData(document.getElementById('form'));
    $.ajax({
      type: 'PUT',
      url: '/about',
      data: formdata,
      processData : false,
      contentType: false,
      success: function(res) {
        if(res.status){
               Swal.fire(
          'Success',
          'Settings updated',
          'success'
        ).then(()=> {
            $('#editForm').attr('disabled', false);
           
            $('.aboutHeadings #form').hide(300);
        })
        }
      }
    })
  })






</script>

<%- include("../../partials/admin-footer") -%>