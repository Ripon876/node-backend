<%- include("../../partials/admin-header") -%>
<%- include("../../partials/admin-nav") -%>


                <div class="content-wrapper p-5">
                 
                  <div class="row">
                    <div class="col-md-12 stretch-card">
                      <div class="card">
                        <div class="card-body">
                        <div class="align-items-baseline d-flex justify-content-between">
                        <p class="card-title">Services</p>
                        <div>
                           <button  id="editForm" class="btn btn-primary">Edit</button>
                          <a href="/services/new"  id="editForm" class="btn btn-primary">Add New</a>               
                        </div>

                  </div>
                
                    <div class="serviceForm py-5" id="serviceHeading">
                      <form id="form" method="post" enctype="multipart/form-data">
                             <div class="form-group">
                                  <label for="title">Title</label>
                                  <input type="text" class="form-control" value="<%= service.title %>" name="title"  id="title" placeholder="title">
                              </div>
                              <div class="form-group">
                                  <label for="description">Description</label>
                                  <textarea class="form-control border"    name="short_description" id="short_description" rows="3" placeholder="description" maxlength="125"><%= service.short_description %></textarea>
                              </div>
                           <div>
                              <button type="submit" id="submit" class="btn btn-primary">Save</button>
                          </div>
                      </form>
                    </div>

                                


                    <div id="serviceform"  class="py-5">
                      
                        <form id="serviceEditForm"  method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                  <label for="title">Title</label>
                                    <input type="text" class="form-control"  name="title"  id="title" placeholder="title">
                                  </div>
                                  <div class="d-flex form-group row">
                                    <div class="col-lg-4 col-md-4">
                                      <label for="img">Image</label>
                                      <input type="file"   style="border: none !important;" class="form-control" name="img" id="img">
                                    </div>
                                    <div id="imgPreviewBox" class="col col-lg-8 text-center" style="height: 500px;width: auto;margin: auto;overflow: scroll;position: relative;">
                                      <img src=''   id="imgPreview"   class="img-fluid"style="left: 50%;transform: translate(-50%, 0);position: absolute;">
                                    </div>
                                  </div>
                                  <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea class="form-control border"   name="description" id="description" rows="5" placeholder="description" maxlength="125"></textarea>
                                  </div>
                                    <div class="form-check">
                                      <input class="form-check-input m-0" type="checkbox" name="show_content_first"  id="show_content_first" >
                                      <label class="form-check-label" for="show_content_first">
                                        Show Content First
                                      </label>
                                    </div>
                            <div>
                                <button type="submit" id="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>






                  <div class="table-responsive">
                    <table id="recent-purchases-listing" class="table">
                      <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Show Content First</th>
                            <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>


                    <% if(service){ %>
                        <% service.services.forEach((service)=> {  %>
                          <tr>
                              <td><img src="<%= service.img %>" alt=""></td>
                              <td><h4><%= service.title %></h4></td>
                              <td><h4><%= service.show_content_first ? 'Yes' : 'No' %></h4></td>
                              <td>
                                <input type="text" value="<%= JSON.stringify(service) %>" class="d-none">
                                <button class="btn btn-primary px-3 py-2 editService">Edit</button>
                                <button class="btn btn-danger px-3 py-2 deleteService">Delete</button>
                              </td>
                          </tr>   
                       <%  }) %>
                    <% } %> 

                         
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>




<script type="text/javascript">
  $('.serviceForm').hide()
  $('#serviceform').hide()

    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function(e) {
          function na(){
            $('#imgPreview').attr("src", e.target.result)
            $('#imgPreviewBox').show(300);
          }
          na();
        }
        reader.readAsDataURL(input.files[0]); // convert to base64 string
      }
    }
    $("#img").change(function() {
    readURL(this);
    });

</script>

<script>
  $("#editForm").click(()=>{
     $("#editForm").attr('disabled' ,true)
    $('.serviceForm').show(300)
  })
</script>





<script>
  $('.serviceForm #form').submit((e)=>{
    e.preventDefault();
    var formdata = new FormData(document.getElementById('form'));
    $.ajax({
      type: 'PUT',
      url: '/services',
      data: formdata,
      processData : false,
      contentType: false,
      success: function(res) {
        if(res.status){
               Swal.fire(
          'Success',
          'Settings updated',
          'success'
        ).then(()=> {
            $('#editForm').attr('disabled', false);
            $('.serviceForm #form #title').val(res.services.title)
            $('.serviceForm #form #short_description').val(res.services.short_description)
            $('.serviceForm').hide(300);
        })
        }
      },
      error : function(err){
        Swal.fire(
            'Error',
            'Something went wrong',
            'error'
          )
      }
    })
  })
</script>



