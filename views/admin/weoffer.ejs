<%- include("../../partials/admin-header") -%>
<%- include("../../partials/admin-nav") -%>


        <div class="content-wrapper p-5">
         
          <div class="row">
            <div class="col-md-12 stretch-card">
              <div class="card">
                <div class="card-body">
                <div class="align-items-baseline d-flex justify-content-between">
                        <p class="card-title">We Offer</p>
                        <div>
                          <button  id="editForm" class="btn btn-primary">Edit</button>
                          <a href="/offers/new"  class="btn btn-primary">Add New</a>               
                        </div>

                  </div>

                <div class="offerHeadings py-5">
                      <form id="form" method="post" enctype="multipart/form-data">
                             <div class="form-group">
                                  <label for="title">Title</label>
                                  <input type="text" class="form-control" value="<%= offers.title %>" name="title"  id="title" placeholder="title">
                              </div>
                              <div class="form-group">
                                  <label for="description">Description</label>
