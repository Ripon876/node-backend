              </div>
        <div>
            <button type="submit" id="submit" class="btn btn-primary">Add</button>
        </div>
    </form>
</div>




               <div class="table-responsive">
                              <table id="recent-purchases-listing" class="table">
                                <thead>
                                  <tr>
                                      <th>Image</th>
                                      <th>Title</th>
                                      <th>Actions</th>
                                  </tr>
                                </thead>
                                <tbody>


                    <% if(offers){ %>
                        <% offers.offers.forEach((offer)=> {  %>
                          <tr>
                              <td><img src="<%= offer.img %>" alt=""></td>
                              <td><h4><%= offer.title %></h4></td> 
                              <td class="text-center">
                                <input type="text" value="<%= JSON.stringify(offer) %>" class="d-none">
                                <button class="btn btn-primary px-3 py-2 editOffer">Edit</button>
                                <button class="btn btn-danger px-3 py-2 deleteOffer">Delete</button>
                              </td>
                          </tr>   
                       <%  }) %>
                    <% } %> 

                         
                      </tbody>
                    </table>
                  </div>


                </div>
              </div>
            </div>
          </div>
        </div>




<script type="text/javascript">


function readURL(input) {

  if (input.files && input.files[0]) {
  var reader = new FileReader();
  reader.onload = function(e) {
    function na(){
      $('#logoPreview').attr("src", e.target.result)
      $('#imgPreviewBox').show(300);
    }
    na();
  }
  reader.readAsDataURL(input.files[0]); // convert to base64 string
  }
}

function readURL2(input) {

  if (input.files && input.files[0]) {
  var reader = new FileReader();
  reader.onload = function(e) {
    function na(){
      $('#imgPreview').attr("src", e.target.result)
      $('#imgPreviewBox').show(300);
    }
    na();
  }
  reader.readAsDataURL(input.files[0]); // convert to base64 string
  }
}

$("#img").change(function() {
readURL(this);
});

$("#benefitimg").change(function() {
readURL2(this);
});

</script>

<script>
  $('.offerHeadings').hide();
  $('#newofferform').hide();



  $('#editForm').click(()=> {
      $("#editForm").attr('disabled' ,true)
     $('.offerHeadings').show(300);
  })





 $('.offerHeadings #form').submit((e)=>{
    e.preventDefault();
    var formdata = new FormData(document.getElementById('form'));
    $.ajax({
      type: 'PUT',
      url: '/offers',
      data: formdata,
      processData : false,
      contentType: false,
      success: function(res) {
        if(res.status){
               Swal.fire(
          'Success',
          'Info updated',
          'success'
        ).then(()=> {
            $('#editForm').attr('disabled', false);
           
            $('.offerHeadings').hide(300);
        })
        }
      },
      error : function(err){
        Swal.fire(
            'Error',
            'Something went wrong',
            'error'
          )
      }
    })
  })


</script>








