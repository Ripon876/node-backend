<body cz-shortcut-listen="true">
<main class="d-flex w-100" style="background: #f3f7f7;">
    <div class="container d-flex flex-column">
        <div class="row vh-100">
            <div class="col-sm-10 col-md-6 col-lg-4 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">
                    <div class="text-center mt-4">
                        <h1 class="h2">Welcome back</h1>
                        <p class="lead">
                            Sign in to your account to continue
                        </p>
                    </div>

                    <div class="card" style="background: white;border-radius: 5px;">
                        <div class="card-body" >
                            <div class="m-sm-4">
                                <form method="POST" action="/login">
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Username</label>
                                        <input class="form-control form-control-lg  " id="text" type="text"  name="username"  placeholder="Enter your Email" value="" autofocus="">
                                        
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <input class="form-control form-control-lg " id="password" type="password" name="password" placeholder="Enter your password">
                                        <a href="/forgot-password">Forgot password?</a>
                                        </small>
                                    </div>
                                    <div class="text-center mt-3">
                                         <button type="submit" class="btn btn-lg btn-primary" style="background: #f3f7f7;color: #0e141e;font-weight: bold;">Sign in</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
